<div class="container mt-5">
  <div class="row">
    <div class="col-12 col-lg-8 offset-lg-2">
      <div class="card">
        <div class="card-body">
          <h3 class="">Регистрация</h3>
          <div class="header-hint mb-4">
            Нажимая кнопку "Зарегестрироваться" Вы соглашаетесь с нашими <a href="#">правилами обработки персональных данных</a>
          </div>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="form-group custom-form-group">
              <%= f.label :fio %>
              <%= f.text_field :fio, autofocus: true, class: 'form-control custom-input', placeholder: 'Фамилия Имя' %>
            </div>
            <div class="form-group custom-form-group">
              <%= f.label :phone %>
              <%= f.text_field :phone, class: 'form-control custom-input', placeholder: 'Номер телефона' %>
            </div>
            <div class="form-group custom-form-group">
              <%= f.label :email %>
              <%= f.email_field :email, class: 'form-control custom-input', placeholder: 'Электронная почта', autocomplete: 'email' %>
            </div>
            <div class="form-group custom-form-group">
              <%= f.label :password %>
              <%= f.password_field :password, class: 'form-control custom-input', placeholder: 'Пароль', autocomplete: 'new-password' %>
            </div>
            <div class="form-group custom-form-group mb-5">
              <%= f.label :password_confirmation %>
              <%= f.password_field :password_confirmation, class: 'form-control custom-input', placeholder: 'Повтор пароля', autocomplete: 'new-password' %>
            </div>

            <div class="row">
              <div class="col-6">
                <%= f.submit "Зарегестрироваться", class: 'btn btn-primary btn-lg px-lg-4' %>
              </div>
              <div class="col-6 text-right my-auto">
                <%= link_to 'Войти с паролем', new_user_session_path, class: 'form-link-small' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

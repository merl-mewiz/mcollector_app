<nav class="navbar navbar-light bg-light mb-4">
  <div class="container-fluid">
    <div class="mr-auto">
    </div>
    <%= render '/layouts/system/mobile_menu_button' %>
  </div>
</nav>
<%= render '/layouts/system/flashes' %>
<%= render "devise/shared/error_messages", resource: resource %>

<div class="content-container">
<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <h4 class="mb-4">Мой профиль</h4>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <div class="form-group custom-form-group">
          <%= f.label :fio %>
          <%= f.text_field :fio, class: 'form-control custom-input', placeholder: 'Фамилия Имя' %>
        </div>
        <div class="form-group custom-form-group">
          <%= f.label :phone %>
          <%= f.text_field :phone, class: 'form-control custom-input', placeholder: 'Номер телефона' %>
        </div>
        <div class="form-group custom-form-group">
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control custom-input', placeholder: 'Электронная почта', autocomplete: 'email' %>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>
        </div>
        <div class="form-group custom-form-group">
          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control custom-input', placeholder: 'Пароль', autocomplete: 'new-password' %>
        </div>
        <div class="form-group custom-form-group">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, class: 'form-control custom-input', placeholder: 'Повтор пароля', autocomplete: 'new-password' %>
        </div>
        <div class="form-group custom-form-group mb-5">
          <%= f.label :current_password %> <i>(нужен для подтверждения изменений)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control custom-input', placeholder: 'Старый пароль' %>
        </div>
        <div class="row">
          <div class="col-12">
            <%= f.submit "Сохранить", class: 'btn btn-primary btn-lg px-lg-4' %>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>
</div>
